<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.developer.zyumbik.goclayout.FragmentRandomEvent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/uRnd_fragment_bottom_sheet_poll_layout"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/uRnd_fragment_bottom_sheet_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/uRandom_event_text_question"/>


        <Button
            android:id="@+id/uRnd_fragment_bottom_sheet_button_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_below="@id/uRnd_fragment_bottom_sheet_question"
            android:text="@string/button_true"/>

        <Button
            android:id="@+id/uRnd_fragment_bottom_sheet_button_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_below="@id/uRnd_fragment_bottom_sheet_question"
            android:layout_toLeftOf="@id/uRnd_fragment_bottom_sheet_button_true"
            android:layout_toStartOf="@id/uRnd_fragment_bottom_sheet_button_true"
            android:text="@string/button_false"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/uRnd_fragment_bottom_sheet_graph"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.34"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="\??%"/>

    </FrameLayout>


</LinearLayout>
