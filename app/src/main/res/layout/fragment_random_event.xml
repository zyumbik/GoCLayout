<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.developer.zyumbik.goclayout.FragmentRandomEvent"
              android:orientation="vertical"
              android:nestedScrollingEnabled="true">

    <RelativeLayout
        android:id="@+id/uRnd_fragment_bottom_sheet_poll_layout"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/uRnd_fragment_bottom_sheet_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/uRandom_event_text_question"/>

        <Button
            android:id="@+id/uRnd_fragment_bottom_sheet_button_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_below="@id/uRnd_fragment_bottom_sheet_question"
            android:text="@string/button_poll_skip"/>

        <Button
            android:id="@+id/uRnd_fragment_bottom_sheet_button_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_below="@id/uRnd_fragment_bottom_sheet_question"
            android:text="@string/button_true"/>

        <Button
            android:id="@+id/uRnd_fragment_bottom_sheet_button_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_below="@id/uRnd_fragment_bottom_sheet_question"
            android:layout_toLeftOf="@id/uRnd_fragment_bottom_sheet_button_true"
            android:layout_toStartOf="@id/uRnd_fragment_bottom_sheet_button_true"
            android:text="@string/button_false"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:weightSum="1"
            android:baselineAligned="false">

            <FrameLayout
                android:id="@+id/uRnd_fragment_bottom_sheet_graph_pplYes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3454"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

        <TextView
            android:id="@+id/uRnd_fragment_bottom_sheet_graph_percentage"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="34.54%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_offset"
            android:paddingStart="@dimen/text_offset"
            android:paddingRight="@dimen/text_offset"
            android:paddingEnd="@dimen/text_offset"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/textRegular"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="+"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_offset"
            android:paddingStart="@dimen/text_offset"
            android:paddingRight="@dimen/text_offset"
            android:paddingEnd="@dimen/text_offset"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/textRegular"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="â€“"/>

    </RelativeLayout>


</LinearLayout>
