<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/calcListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/calcListCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/text_offset"
        android:layout_marginLeft="@dimen/text_offset"/>

    <ImageButton
        android:id="@+id/calcListButtonRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_24dp"
        android:padding="@dimen/text_offset"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00000000"
        android:contentDescription="@string/remove_item"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/calcListButtonRemove"
        android:layout_toStartOf="@id/calcListButtonRemove"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calcListIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5"/>

        <TextView
            android:id="@+id/calcListSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/calc_list_separator"/>

        <TextView
            android:id="@+id/calcListValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="20"/>

    </LinearLayout>

</RelativeLayout>